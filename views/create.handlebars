<main class="row justify-content-center align-items-center" id="create-view">
  <section class="card col-12 col-md-10 col-lg-8 p-0 my-5 border-dark">
    <header class="card-header bg-dark text-white">
      <h2>Create Post</h2>
    </header>
    <form id="post-form" class="post-form card-body p-0">
      <div class="form-group m-3">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" id="post-title" placeholder="Title" />
      </div>
      <div class="form-group m-3">
        <label for="body">Post</label>
        <textarea class="form-control" name="body" id="post-body" rows="8" placeholder="Post Contents"></textarea>
      </div>
    </form>
    <div class="row my-3 justify-content-around">
      <button class="col-10 col-lg-4 btn btn-dark" form="post-form" type="submit" id="submit">Post</button>
    </div>
  </section>
  <script src="/js/post.js"></script>
</main>